<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dennis.androidfinal.DayInfo"
    tools:showIn="@layout/activity_item_info">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
        
        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/day"
            android:id="@+id/dayImage"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_textDay" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="10dp">

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFF8E1"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="All Along the Watchtower by Jimi Hendrix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jimi"
                    android:clickable="true"
                    android:onClick="playJimi"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFECB3"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Can't Stop by Red Hot Chili Peppers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chili"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:clickable="true"
                    android:onClick="playChili"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFE082"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Everything's Magic by Angels and Airwaves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ava"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:clickable="true"
                    android:onClick="playAva"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFD54F"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Kryptonite by 3 Doors Down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/tdd"
                    android:clickable="true"
                    android:onClick="playTdd"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFCA28"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Life in the Fast Lane by The Eagles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/eagles"
                    android:clickable="true"
                    android:onClick="playEagle"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFC107"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="My Big Mouth by Oasis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/oasis"
                    android:clickable="true"
                    android:onClick="playOasis"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFB300"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Over My Head (Cable Car) by The Fray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/fray"
                    android:clickable="true"
                    android:onClick="playFray"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFA000"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Surrender by Angels and Airwaves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/ava2"
                    android:clickable="true"
                    android:onClick="playAva2"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FF8F00"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="The End by Kings of Leon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/kol"
                    android:clickable="true"
                    android:onClick="playKol"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FF6F00"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Young Lust by Pink Floyd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/pink"
                    android:clickable="true"
                    android:onClick="playPink"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

        </TableLayout>

        <Button
            android:text="Back"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:id="@+id/button"
            android:clickable="true"
            android:onClick="finish"
            android:layout_width="wrap_content" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
