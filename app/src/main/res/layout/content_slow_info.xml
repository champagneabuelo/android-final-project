<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dennis.androidfinal.SlowInfo"
    tools:showIn="@layout/activity_slow_info">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/slow"
            android:id="@+id/slowImage"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_textSlow" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="10dp">

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#F1F8E9"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Branches and Constellations by The Echelon Effect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jimi"
                    android:clickable="true"
                    android:onClick="playEch"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#DCEDC8"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Halving the Compass by Helios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chili"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:clickable="true"
                    android:onClick="playHel"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#C5E1A5"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Hibernation by Random Forest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ava"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:clickable="true"
                    android:onClick="playRan"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#AED581"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="It's Dark It's Cold It's Winter by sleepmakeswaves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/tdd"
                    android:clickable="true"
                    android:onClick="playSleep"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#9CCC65"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Hypersleep 65daysofstatic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/eagles"
                    android:clickable="true"
                    android:onClick="play65"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#8BC34A"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Padmasana by Buckethead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/oasis"
                    android:clickable="true"
                    android:onClick="playBuck"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#7CB342"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Pretending by Evolution of Stars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/fray"
                    android:clickable="true"
                    android:onClick="playEvo"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#689F38"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Shadows Fall by Random Forest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/ava2"
                    android:clickable="true"
                    android:onClick="playRand"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#558B2F"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Twentytwofourteen by The Album Leaf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/kol"
                    android:clickable="true"
                    android:onClick="playAlb"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#33691E"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Varberg by U137"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/pink"
                    android:clickable="true"
                    android:onClick="playU"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

        </TableLayout>


        <Button
            android:text="Back"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:id="@+id/button"
            android:clickable="true"
            android:onClick="finish"
            android:layout_width="wrap_content" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
