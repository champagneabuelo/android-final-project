<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dennis.androidfinal.FastInfo"
    tools:showIn="@layout/activity_fast_info">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/space11"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/fast"
            android:id="@+id/fastImage"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_textFast" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="10dp">

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFEBEE"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Absolute Zero by Stone Sour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jimi"
                    android:clickable="true"
                    android:onClick="playStone"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#FFCDD2"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Change (In the House of Flies) by Deftones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chili"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:clickable="true"
                    android:onClick="playDef"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#EF9A9A"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Joyride (Omen) by Chevelle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ava"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:clickable="true"
                    android:onClick="playChev"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#E57373"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Natives by blink-182"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/tdd"
                    android:clickable="true"
                    android:onClick="playBlink"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#EF5350"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Out of Reach by Funeral For a Friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/eagles"
                    android:clickable="true"
                    android:onClick="playFun"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#F44336"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Riot by Three Days Grace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/oasis"
                    android:clickable="true"
                    android:onClick="playThree"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#E53935"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Stricken by Disturbed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/fray"
                    android:clickable="true"
                    android:onClick="playDis"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#D32F2F"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Crawl by Breaking Benjamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/ava2"
                    android:clickable="true"
                    android:onClick="playBreak"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#C62828"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="The Kill by 30 Seconds to Mars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/kol"
                    android:clickable="true"
                    android:onClick="play30"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="#B71C1C"
                android:minHeight="100px"
                android:layout_height="200dp">

                <TextView
                    android:text="Wicked Garden by Stone Temple Pilots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:id="@+id/pink"
                    android:clickable="true"
                    android:onClick="playSTT"/>

            </TableRow>

            <View
                android:layout_height="2px"
                android:background="#000000"
                android:layout_width="match_parent" />

        </TableLayout>

        <Button
            android:text="Back"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:id="@+id/button"
            android:clickable="true"
            android:onClick="finish"
            android:layout_width="wrap_content" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
